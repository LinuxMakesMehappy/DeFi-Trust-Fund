{
  "name": "defi-trust-fund",
  "version": "0.1.0",
  "description": "DeFi Trust Fund - Self-Perpetuating Proof of Loyalty and Liquidity Protocol",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "test:all": "bash scripts/run-all-tests.sh",
    "test:security": "anchor test tests/security-tests.ts",
    "test:security:attacks": "anchor test tests/security-attack-simulations.ts",
    "test:comprehensive": "anchor test tests/comprehensive-test-suite.ts",
    "test:integration": "anchor test tests/end-to-end-integration.ts",
    "test:performance": "anchor test tests/performance-load-tests.ts",
    "test:chaos": "anchor test tests/chaos-engineering-tests.ts",
    "test:overflow": "anchor test tests/security-tests.ts --grep 'Arithmetic Safety'",
    "test:access-control": "anchor test tests/security-tests.ts --grep 'Access Control'",
    "test:emergency-controls": "anchor test tests/security-tests.ts --grep 'Emergency Controls'",
    "test:reentrancy": "anchor test tests/security-attack-simulations.ts --grep 'Reentrancy'",
    "test:rate-limiting": "anchor test tests/security-attack-simulations.ts --grep 'Rate Limiting'",
    "test:governance": "anchor test tests/end-to-end-integration.ts --grep 'Governance'",
    "test:oracle": "anchor test tests/security-attack-simulations.ts --grep 'Oracle'",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:frontend:security": "cd frontend && npm test -- --testPathPattern=comprehensive-frontend-tests --watchAll=false",
    "deploy": "anchor deploy",
    "deploy:testnet": "anchor deploy --provider testnet",
    "deploy:mainnet": "anchor deploy --provider mainnet",
    "lint": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:security": "cargo clippy --all-targets --all-features -- -W clippy::security -W clippy::suspicious -D warnings",
    "format": "cargo fmt --all",
    "format:check": "cargo fmt --all -- --check",
    "clean": "anchor clean",
    "audit": "cargo audit",
    "audit:fix": "cargo update",
    "security:scan": "semgrep --config=.semgrep.yml src/",
    "security:review": "bash scripts/security-review.sh",
    "security:pentest": "echo 'Running penetration testing...' && npm run test:security:attacks",
    "security:audit": "echo 'Running comprehensive security audit...' && npm run test:security && npm run test:security:attacks",
    "verify": "echo 'Running formal verification...' && cargo check",
    "ci:validate": "bash scripts/validate-ci-setup.sh",
    "pre-commit": "npm run format:check && npm run lint && npm run test:security",
    "pre-deploy": "npm run test:all && npm run security:audit"
  },
  "keywords": [
    "solana",
    "anchor",
    "defi",
    "trust-fund",
    "staking",
    "jupiter",
    "kamino",
    "liquidity",
    "loyalty",
    "nft",
    "yield-farming",
    "governance",
    "security"
  ],
  "author": "DeFi Trust Fund Team",
  "license": "MIT",
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/web3.js": "^1.87.0",
    "@solana/spl-token": "^0.3.9",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/defi-trust-fund.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/defi-trust-fund/issues"
  },
  "homepage": "https://github.com/your-org/defi-trust-fund#readme"
}

